void HelloScene::initialize()
{
	bg = new CBImage(LOGO_NAME);
	float x = (CBEnvironment::getScreenWidth() - bg->getWidth()) / 2;
	float y = (CBEnvironment::getScreenHeight() - bg->getHeight()) / 2;
	bg->moveToAbsolute(x, y);
	addChild(bg);
	
	label = new CBLabel("Test", 18);
	label->moveTo(100,100);
	addChild(label);
	
	button = new CBButton("Test2",20);
	button->moveTo(100,200);
	addChild(button);
}

